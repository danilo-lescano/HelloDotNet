@model IEnumerable<TaCertoForms.Models.Turma>

@{
    ViewBag.Title = "Index";
}
<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Turmas
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Início</a>
            </li>
            <li class="active">
                <a href="@Url.Action("Index", "Turma")">Turmas</a>
            </li>
        </ol>
    </section>

    <section class="content">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Listagem de registros</h3>
                <a href="@Url.Action("Create", "Turma")" class="btn btn-sm btn-primary btn-flat pull-right">Novo registro</a>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                Instituição
                            </th>
                            <th>
                                Série
                            </th>
                            <th>
                                Período
                            </th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>


                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @foreach (var instituicao in ViewBag.InstituicaoList){
                                        if (instituicao.IdInstituicao == item.IdInstituicao){
                                            @instituicao.NomeFantasia
                                        }
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Serie)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Periodo)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Turma", new { id = item.IdTurma })" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                    <!--
                                    <a href="@Url.Action("Delete", "Turma", new { id = item.IdTurma })" class="btn btn-danger btn-xs"><i class="fa fa-remove"></i></a>
                                    -->
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </section>
</div>

<script type="text/javascript">

    $('#example1').DataTable({
         "language": dados_translate
    });
</script>

