@model TaCertoForms.Models.Turma

@{
    ViewBag.Title = "Delete";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Exclusão de Turma
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i>Início</a>
            </li>
            <li class="active">
                <a href="@Url.Action("Index", "Turma")">Turmas</a>
            </li>
        </ol>
    </section>

    <section class="content">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Exclusão de Registro</h3>
                <a href="@Url.Action("Index", "Turma")" class="btn btn-sm btn-default btn-flat pull-right">Voltar</a>
            </div>
            <dl class="dl-horizontal">
                <dt>
                    Instituicao
                </dt>

                <dd>
                    @ViewBag.NomeFantasia
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Serie)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Serie)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Periodo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Periodo)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="box-footer">
                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger pull-right" />
                    </div>
                </div>
            }
        </div>
    </section>
</div>
