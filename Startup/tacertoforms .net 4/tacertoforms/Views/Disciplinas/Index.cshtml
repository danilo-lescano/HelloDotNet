@model IEnumerable<tacertoforms.Models.ViewModelDisciplina>

@{
    ViewBag.Title = "Index";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Disciplinas
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Início</a>
            </li>
            <li class="active">
                <a href="@Url.Action("Index", "Disciplinas")">Disciplinas</a>
            </li>
        </ol>
    </section>

    <section class="content">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Listagem de registros</h3>
                <a href="@Url.Action("Create", "Disciplinas")" class="btn btn-sm btn-primary btn-flat pull-right">Novo registro</a>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descricao)
                            </th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Disciplinas", new { id = item.IdDisciplina })" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                    <a href="@Url.Action("Delete", "Disciplinas", new { id = item.IdDisciplina })" class="btn btn-danger btn-xs"><i class="fa fa-remove"></i></a>
                                </td>
                            </tr>
                            <tr></tr>
                            <tr style="display: none;">
                                <td colspan="3">
                                    <span style="font-weight: bold;">Turmas</span> <br>
                                    @foreach (var turma in item.Turmas){
                                        @turma.Serie <br>
                                    }
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </section>
</div>

<script type="text/javascript">
    $('#example1').DataTable({
        "language": dados_translate
    });
</script>