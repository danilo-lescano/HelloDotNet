@model IEnumerable<tacertoforms.Models.Instituicao>

@{
    ViewBag.Title = "Index";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Instituições
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Início</a>
            </li>
            <li class="active">
                <a href="@Url.Action("Index", "Instituicaos")">Instituições</a>
            </li>
        </ol>
    </section>

    <section class="content">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Listagem de registros</h3>
                <a href="@Url.Action("Create", "Instituicaos")" class="btn btn-sm btn-primary btn-flat pull-right">Novo registro</a>
            </div>
            <!-- /.box-header -->
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered  table-striped">
                    <thead>
                        <tr>
                            <th>Razão Social</th>
                            <th>Nome Fantasia</th>
                            <th>@Html.DisplayNameFor(model => model.CNPJ)</th>
                            <th>E-mail</th>
                            <th>@Html.DisplayNameFor(model => model.Telefone)</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RazaoSocial)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomeFantasia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CNPJ)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefone)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Instituicaos", new { id = item.IdInstituicao })" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                    <a href="@Url.Action("Delete", "Instituicaos", new { id = item.IdInstituicao })" class="btn btn-danger btn-xs"><i class="fa fa-remove"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </section>
</div>

<script type="text/javascript">

    $('#example1').DataTable({
         "language": dados_translate
    });
</script>
