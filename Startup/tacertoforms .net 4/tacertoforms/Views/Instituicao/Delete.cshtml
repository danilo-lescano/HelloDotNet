@model TaCertoForms.Models.Instituicao

@{
    ViewBag.Title = "Delete";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Exclusão de Instituição
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i>Início</a>
            </li>
            <li class="active">
                <a href="@Url.Action("Index", "Instituicao")">Instituições</a>
            </li>
        </ol>
    </section>

    <section class="content">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Exclusão de Registro</h3>
                <a href="@Url.Action("Index", "Instituicao")" class="btn btn-sm btn-default btn-flat pull-right">Voltar</a>
            </div>
            
            <div class="col-xs-12">
                <h4 class="box-title">Informações da Instituição</h4>
                <dl class="dl-horizontal">
                    <dt>
                        Razão Social
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.RazaoSocial)
                    </dd>
                    <dt>
                        Nome Fantasia
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.NomeFantasia)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.CNPJ)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CNPJ)
                    </dd>
                    <dt>
                        E-mail
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Telefone)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Telefone)
                    </dd>
                </dl>

                <dl class="dl-horizontal">
                    <h4 class="box-title">Endereço Principal</h4>
                    <dt>
                        País
                    </dt>
                    <dd>
                        @Html.Raw(ViewBag.enderecoPrincipal.Pais)
                    </dd>
                    <dt>
                        CEP
                    </dt>
                    <dd>
                        @Html.Raw(ViewBag.enderecoPrincipal.CEP)
                    </dd>
                    <dt>
                        Cidade/Estado
                    </dt>
                    <dd>
                        @Html.Raw(ViewBag.enderecoPrincipal.Cidade)/@Html.Raw(ViewBag.enderecoPrincipal.UF)
                    </dd>
                    <dt>
                        Logradouro
                    </dt>
                    <dd>
                        @Html.Raw(ViewBag.enderecoPrincipal.Logradouro)
                    </dd>
                    <dt>
                        Complemento
                    </dt>
                    <dd>
                        @Html.Raw(ViewBag.enderecoPrincipal.Complemento)
                    </dd>
                    <dt>
                        Número
                    </dt>
                    <dd>
                        @Html.Raw(ViewBag.enderecoPrincipal.Numero)
                    </dd>
                    <dt>
                        Bairro
                    </dt>
                    <dd>
                        @Html.Raw(ViewBag.enderecoPrincipal.Bairro)
                    </dd>
                </dl>
                @if (ViewBag.enderecoCobranca != null)
                {
                <dl class="dl-horizontal">
                    <h4 class="box-title">Endereço de Cobrança</h4>
                    <dt>
                        País
                    </dt>
                    <dd>
                        @Html.Raw(ViewBag.enderecoCobranca.Pais)
                    </dd>
                    <dt>
                        CEP
                    </dt>
                    <dd>
                        @Html.Raw(ViewBag.enderecoCobranca.CEP)
                    </dd>
                    <dt>
                        Cidade/Estado
                    </dt>
                    <dd>
                        @Html.Raw(ViewBag.enderecoCobranca.Cidade)/@Html.Raw(ViewBag.enderecoCobranca.UF)
                    </dd>
                    <dt>
                        Logradouro
                    </dt>
                    <dd>
                        @Html.Raw(ViewBag.enderecoCobranca.Logradouro)
                    </dd>
                    <dt>
                        Complemento
                    </dt>
                    <dd>
                        @Html.Raw(ViewBag.enderecoCobranca.Complemento)
                    </dd>
                    <dt>
                        Número
                    </dt>
                    <dd>
                        @Html.Raw(ViewBag.enderecoCobranca.Numero)
                    </dd>
                    <dt>
                        Bairro
                    </dt>
                    <dd>
                        @Html.Raw(ViewBag.enderecoCobranca.Bairro)
                    </dd>
                </dl>
                }
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="box-footer">
                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger pull-right" />
                    </div>
                </div>
            }
        </div>
    </section>
</div>
