@model IEnumerable<TaCertoForms.Models.ViewModelAluno>
@{
    Layout = null;
}
<div class="table-responsive">
    <table class="table no-margin">
        <thead>
            <tr>
                <th>Turma</th>                
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (@Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    foreach (var turma in item.Turma) { 
                        <tr>
                            <td>@Html.DisplayFor(modelItem => turma.Serie)</td>                        
                            <td>
                                <a href="javascript:void(0)" idta="@Html.DisplayFor(modelItem => item.IdTurmaAluno)" class="btn-remover-ta btn btn-warning btn-xs" title="Desvincular"><i class="fa fa-unlink"></i></a>
                            </td>
                        </tr>        
                    }
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">Nenhum vínculo foi realizado!</td>
                </tr>
            }
        </tbody>
    </table>
</div>