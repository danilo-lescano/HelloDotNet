@model tacertoforms.Models.ViewModelAtividade
<div class="row">
    <div class="col-xs-12 col-md-6">
        <div class="row">
            @using (Html.BeginForm())
            {
                <div class="form-group col-xs-12">
                    @Html.TextBox("IdQuestao", null, new { @id = "input-idquestao-associacao", @type = "hidden"})
                    @Html.Label("Título")
                    @Html.TextBox("Titulo", null, new { @class = "form-control", @id = "input-titulo-associacao" })
                </div>
                <div class="form-group col-xs-12">
                    @Html.Label("Enunciado")
                    @Html.TextArea("Enunciado", null, new { @class = "form-control", @id = "input-enunciado-associacao" })
                </div>
                <div class="form-group col-xs-12">
                    @Html.Label("Peso Nota")
                    @Html.TextBox("PesoNota", null, new { @class = "form-control", @type = "number", @step = ".01", @min = "0", @max = "1", @id = "input-pesonota-associacao"})
                </div>
                <div class="form-group col-xs-12">
                    <label for="exampleInputFile">Adicionar Imagem</label>
                    <input type="file" id="exampleInputFile">
                </div>
                <div class="form-group col-xs-12">
                    @Html.Label("Palavras Certas")                                        
                    @Html.DropDownList("palavrascertas[]",
                    new SelectList(new List<String>()),
                    null,
                    new { @class = "select2 form-control", @multiple = "multiple", @id = "input-certas-associacao"})                    
                </div>

                <div class="form-group col-xs-12">
                    @Html.Label("Palavras Erradas")
                    @Html.DropDownList("palavraserradas[]",
                    new SelectList(new List<String>()),
                    null,
                    new { @class = "select2 form-control", @multiple = "multiple", @id = "input-erradas-associacao" })
                </div>

                <div class="form-group col-xs-12">
                    <input type="submit" value="Adicionar" id="btn-adicionar-associacao" class="btn btn-success" />
                </div>
            }
        </div>
    </div>
    <div class="col-xs-12 col-md-6">
        <table class="table table-bordered table-striped datatable-table">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Enunciado</th>
                    <th>Peso Nota</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody class="listagem-dados">                
            </tbody>
        </table>
    </div>
</div>